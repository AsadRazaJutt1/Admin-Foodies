<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="952143"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dotsForSuggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:padding="6dp"
                android:src="@drawable/ic_more_vert_black_24dp" />

            <TextView
                android:id="@+id/suggestion_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical|start"
                android:text="#111111"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suggestion_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/suggestion_id"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Title"
                android:textAllCaps="false"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/suggestion_Msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/suggestion_Title"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="Message"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/suggestion_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/suggestion_Msg"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:text="123456789"
                android:textAllCaps="false"
                android:textStyle="italic" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>